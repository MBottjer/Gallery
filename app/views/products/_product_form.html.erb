<%= form_for @product do |f| %>

  <p>  
    <%= f.label :name %>  
    <%= f.text_field :name %>  
  </p>  
  <p>  
    <%= f.label :description %>  
    <%= f.text_field :description %>  
  </p>  
  <p>  
    <%= f.label :category_id %>  
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </p>   
  <p><%= f.submit %></p>  
<% end %> 