<div id="second">
  <div class="header-wrapper">
    <div class="header">
      <ul>
        <li class="company_name"> <%= @user.name %> </li>
        <li class="cmsSignOut">
          <%= link_to "SIGN OUT", signout_path, method: "delete" %>
        </li>
      </ul>
    </div>
  </div>
  <div class="row">
  <div class="large-6 columns">
    <div class="productForm">
      <p class="titleProducts"> + Photos </p>
      <%= render 'products/product_form' %>

    </div>
  </div>
  <div class="large-6 columns">
    <div class="productForm">
      <p class="titleProducts"> Current Photos </p>
      <p> click photos to Edit or Delete </p>
      <div class="photoDisplay">
        <% id = 0 %>
        <% @products.each do |product| %>
          <a data-reveal-id="photoEdit<%= id %>"><%= image_tag product.photo.url(:small) %></a>
          <div id="photoEdit<%= id %>" class="reveal-modal" data-reveal>
            <%= form_for product, :html => { :multipart => true } do |f| %>
              
              <p>
                <%= f.file_field :photo %>
              <p>  
                <%= f.text_field :name, placeholder: "Name" %>  
              </p>  
              <p>  
                <%= f.text_field :description, placeholder: "Description" %>  
              </p>  
              <p>  
                <%= f.label :category_id %>  
                <%= f.collection_select :category_id, Category.all, :id, :name %>
              </p>   
              <p><%= f.submit %></p>  
            <% end %>
            <%= link_to 'Delete', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
          <% id += 1 %>
        <% end %>
      </div>

    </div>
  </div>
  </div>

  
    
</div>


  

  